
<h2 class="mt-3 mb-4"><%= @restaurant.name %></h2>
<div class="container">
  <div class="row">
    <div class="col-4">
      <p><strong>Address:</strong></p>
      <p><strong>Category:</strong></p>
      <p><strong>Phone Number:</strong></p>
    </div>
    <div class="col-8">
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.category %></p>
      <p><%= @restaurant.phone_number %></p>
    </div>
  </div>
</div>

<p class="mt-3"><strong>Reviews:</strong></p>
<ul class="mb-4">
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %></li>
  <% end %>
</ul>
<div>
      <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: 'btn btn-primary'  %>
</div>
      <%= link_to 'Back to Restaurant', restaurants_path, class: 'btn btn-danger mt-3'%>

