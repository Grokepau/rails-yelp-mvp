 <h2>Add a review for <%= @restaurant.name %></h2>
<div class="container">
 <%= simple_form_for([@restaurant, @review]) do |f| %>
 <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
 <%= f.input :content %>
 <%= f.submit class: 'btn btn-primary' %>
 <% end %>
 </div>
<div class="container mt-3">
 <%= link_to 'Go Back to Restaurant', restaurant_path(@restaurant), class: 'btn btn-danger' %>
 </div>

